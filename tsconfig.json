{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "rootDir": "./",
        "declaration": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
